

      <div class="row">
        <div class="col s12 m4">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class=" center card-title">The current time and date</span>
              <!-- Manipulate the date format using strftime  -->
              <div class="time_info well well-small">
                  <h4 class="center"><%= @time.strftime("%b %d, %Y")  %></h4>
                  <h4 class="center"><%= @time.strftime("%I:%M %p")  %></h4>
              </div>
            </div>
          </div>
        </div>
      </div>
